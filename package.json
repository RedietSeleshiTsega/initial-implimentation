{
  "name": "metta-language-server",
  "version": "0.0.1",
  "private": true,
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:metta"
  ],
  "contributes": {
    "languages": [
      {
        "id": "metta",
        "aliases": ["Metta", "Hyperon Metta"],
        "extensions": [".metta"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0"
  }
}
